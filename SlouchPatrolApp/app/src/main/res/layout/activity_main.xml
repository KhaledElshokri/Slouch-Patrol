<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- AppBar with Settings and Data buttons -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Connection status -->
    <TextView
        android:id="@+id/textViewConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:text=""
        android:textAlignment="center"
        android:textColorLink="@color/primary_dark"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <!-- Home text -->
    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewConnection" />

    <!-- Settings button -->
    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary_color"
        android:text="Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/appBarLayout"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <!-- Data button -->
    <Button
        android:id="@+id/buttonData"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/primary_color"
        android:text="Data"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/appBarLayout"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <!-- Relative layout for the circle and score -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Outer circle -->
        <View
            android:id="@+id/circle_background_outer"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/primary_color" />

        <!-- Inner circle -->
        <View
            android:id="@+id/circle_background_inner"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/background_color" />

        <!-- Score text -->
        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40sp"
            android:textColor="@color/primary_color"
            android:layout_centerInParent="true"
            android:layout_marginTop="-10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <!-- /100 text below the score -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewScore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:textSize="30sp"
            android:text="/100"
            android:textColor="@color/primary_color" />

        <!-- Message below the circle -->
        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_background_outer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/primary_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/play_pause_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Play/Pause"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintStart_toStartOf="@id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        android:layout_marginStart="90dp"/>

    <Button
        android:id="@+id/stop_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Stop"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        android:layout_marginEnd="90dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
