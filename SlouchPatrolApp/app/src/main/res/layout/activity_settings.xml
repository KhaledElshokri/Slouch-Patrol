<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Activities.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color" />


    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textViewDeviceName"
        android:layout_width="343dp"
        android:layout_height="39dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:text="Device Name"
        android:textColor="@color/primary_color"
        android:textColorLink="@color/primary_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <EditText
        android:id="@+id/editDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="45dp"
        android:hint="Enter device name"
        android:inputType="text"
        android:textColor="@color/primary_color"
        android:textColorHighlight="@color/primary_color"
        android:textColorHint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeviceName" />

    <TextView
        android:id="@+id/infoText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:text="You must initialize your Slouch Patrol at the beginning of each session. "
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@+id/editDeviceName"
        app:layout_constraintStart_toStartOf="@+id/editDeviceName"
        app:layout_constraintTop_toBottomOf="@+id/editDeviceName" />

    <TextView
        android:id="@+id/infoText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:text="Sit up straight in your ideal position and click initialize."
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@+id/editDeviceName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editDeviceName"
        app:layout_constraintTop_toBottomOf="@+id/infoText1" />

    <TextView
        android:id="@+id/lastInitialized"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:text="Your last session was initialized at X."
        android:textAlignment="center"
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@+id/editDeviceName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editDeviceName"
        app:layout_constraintTop_toBottomOf="@+id/buttonInitialize" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:text="Push Notifications"
        android:textAlignment="textStart"
        android:textColor="@color/primary_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewDeviceName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewDeviceName"
        app:layout_constraintTop_toBottomOf="@+id/lastInitialized" />

    <Button
        android:id="@+id/buttonInitialize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary_color"
        android:text="Initialize"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/infoText2"
        app:layout_constraintStart_toStartOf="@+id/infoText2"
        app:layout_constraintTop_toBottomOf="@+id/infoText2" />

    <CheckBox
        android:id="@+id/notifCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary_color"
        android:drawableTint="@color/primary_color"
        android:text="You will be notified when to fix your slouch."
        android:textColor="@color/primary_color"
        android:textColorHighlight="@color/primary_color"
        android:textColorHint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@+id/editDeviceName"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>